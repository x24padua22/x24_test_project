<% content_for :title do %>Display all users<% end %>
<h1>Users</h1>
<table id="user_table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Full Name</th>
			<th>Email Address</th>
			<th>Registered Date</th>
		</tr>
	</thead>
	<tbody>
	<% @users.each do |user| %>
		<tr>
			<td><%= link_to user.id, user_path(user) %></td>
			<td><%= user.name %></td>
			<td><%= user.email_address %></td>
			<td>	
				<%= link_to "Edit",  edit_user_path(user) %>
				<%= link_to "Delete", user, :method => :delete, data:{ confirm:"Are you sure you want to delete?"} %>
			</td>
		</tr>
	<% end %>
	</tbody>
</table>
<%= link_to "Create New Record", new_user_path, :id => "create_user" %>